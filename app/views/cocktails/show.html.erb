<h1>your drink!</h1>
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><strong><%= dose.ingredient.name %></strong> : <%= dose.description %></li>
    <li><%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete %></li>
  <% end %>
</ul>

<div><%= link_to 'Add description', new_cocktail_dose_path(@cocktail) %></div>
<div><%= link_to 'your favorite menu', cocktails_path %></div>

